<div class="wrapper">
    <div class="logo">
        <img src="http://localhost:8080/img/icono.png" alt="">
    </div>
    <div class="text-center mt-4 name">
        Registro
    </div>
    {{#if failed}}
    <div><p style="color: rgb(129, 44, 44)">{{message}}</p></div>
    {{/if}}
    <form class="p-3 mt-3" action="/api/sessions/register" method="post">
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="first_name" id="first_name" placeholder="Nombre" required>
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="text" name="last_name" id="last_name" placeholder="Apellido" required>
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="far fa-user"></span>
            <input type="email" name="email" id="email" placeholder="Email" required>
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="password" name="password" id="password" placeholder="ContraseÃ±a" required>
        </div>
        <div class="form-field d-flex align-items-center">
            <span class="fas fa-key"></span>
            <input type="number" name="age" id="age" placeholder="Edad" required>
        </div>
        <button class="btn mt-3" type="submit">Registrarse</button>
    </form>
    <div class="text-center fs-6">
        <a href="/login">Volver al Inicio</a>
    </div>
</div>